{
  "agents": {
    "agent-companion-sam": {
      "name": "Sam",
      "enabled": true,
      "modules": {
        "letta": {
          "server": {
            "base_url": "http://localhost:8283",
            "token": ""
          },
          "letta_agent_config": {
            "model": "anthropic/claude-3-5-sonnet-20241022",
            "embedding": "openai/text-embedding-3-small",
            "memory_blocks": {
              "identity": {
                "limit": 3000,
                "template": "identity_default"
              },
              "relationship_context": {
                "limit": 2500,
                "template": "relationship_default"
              },
              "persona": {
                "limit": 2000,
                "template": "persona_conversational",
                "customizations": {
                  "agent_name": "Sam",
                  "core_traits": ["curious", "thoughtful", "playful"]
                }
              },
              "human": {
                "limit": 2000,
                "value": "Name: Tanner\nInterests: AI, D&D, photography"
              }
            },
            "system_prompt_template": "conversational_companion",
            "custom_tools": [
              "reflect_and_commit_memory",
              "quick_memory_note",
              "update_identity",
              "update_relationship"
            ]
          }
        }
      }
    },
    "agent-direct-value-example": {
      "name": "DirectBot",
      "enabled": false,
      "modules": {
        "letta": {
          "server": {
            "base_url": "http://localhost:8283"
          },
          "letta_agent_config": {
            "model": "anthropic/claude-3-5-sonnet-20241022",
            "embedding": "openai/text-embedding-3-small",
            "memory_blocks": {
              "persona": {
                "limit": 2000,
                "value": "You are a helpful assistant with persistent memory.\n\nRemember important details about conversations and use your memory tools to maintain continuity."
              },
              "human": {
                "limit": 1500,
                "value": "User information will be gathered through conversation."
              }
            },
            "system_prompt_template": "conversational_companion"
          }
        }
      }
    },
    "agent-file-reference-example": {
      "name": "FileBot",
      "enabled": false,
      "modules": {
        "letta": {
          "server": {
            "base_url": "http://localhost:8283"
          },
          "letta_agent_config": {
            "model": "anthropic/claude-3-5-sonnet-20241022",
            "embedding": "openai/text-embedding-3-small",
            "memory_blocks": {
              "persona": {
                "limit": 2000,
                "file": "/path/to/custom/persona.txt"
              },
              "human": {
                "limit": 1500,
                "file": "/path/to/user/profile.txt"
              }
            },
            "system_prompt_template": "/path/to/custom/system-prompt.txt"
          }
        }
      }
    }
  }
}
